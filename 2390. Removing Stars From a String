class Solution {
public:
    string removeStars(string s) {
           string result;
    
    for (char ch : s) {
        if (ch == '*') {
            if (!result.empty()) {
                result.pop_back();  // remove last character
            }
        } else {
            result.push_back(ch);  // add character to result
        }
    }

    return result;
    }
};
